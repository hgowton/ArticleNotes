<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/articles">MongoScraper</a>

    <div class="navbar-nav">
      <button type="button" class="btn btn-danger" id="delete-articles">Clear Articles!</button>
      <a class="nav-item nav-link" href="/articles">Home <span class="sr-only">(current)</span></a>  |  
      <a class="nav-item nav-link active" href="/saved">Saved Articles</a>

  </div>
</nav>

{{#each article}}
{{#if saved}}
<div class="container"> 
    <div class="row">
        <div class="col-md-8 title">
          <a href="{{this.link}}" target="_blank">{{this.title}}</a>
        </div>
        <div class="col-md-4">
            <button type="button" class="btn btn-danger"  id="unsaved" data-id="{{this._id}}">Delete from Saved</button>
            <!-- Button trigger modal -->
              <button type="button" class="btn btn-primary article-notes" data-toggle="modal" data-id="{{this._id}}" data-target="#{{this._id}}" >
                Article Notes
              </button>

            <!-- Modal -->
            <div class="modal fade" id="{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="notesModal" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">{{this.title}}</h5>

                    <div id="{{this._id}}-specialNote"></div>
 
                  </div>
                  <div class="modal-body">
                    <textarea name="newNote" placeholder="new note" id="{{this._id}}-notebody" required></textarea>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary"  data-id="{{this._id}}" id="save-note">Save Note</button>
                  </div>
                </div>
              </div>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
          <img src="{{this.image}}" alt="article image" />
        </div>
        <div class="col-md-8 info">
            <p>{{this.date}}</p>
            <p>{{this.description}}</p>
        </div>
    </div>
</div>
{{/if}}
{{/each}}
<footer>Pew Research Center Scraper</footer>